---
const { data } = Astro.props.certification;

const label = `Ver certificación de ${data.title}`;
---

<a
  href={data.url ?? "#certifications"}
  aria-label={label}
  target={data.url ? "_blank" : undefined}
  rel={data.url ? "noopener noreferrer" : undefined}
  class="block md:w-auto border border-(--border-color) rounded-lg p-6 space-y-1.5
         hover:border-(--accent-cyan) transition-colors
         bg-(--bg-secondary) cursor-pointer"
>
  <h3 class="text-sm font-bold">{data.title}</h3>

  <p class="text-sm text-(--text-secondary)">
    {data.issuer} • {data.year}
  </p>
</a>
