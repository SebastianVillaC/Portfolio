---
import Navigation from "./Navigation.astro";
---

<header class="sticky top-0 z-50 border-b border-(--border-color)">
  <nav
    aria-label="Navegación principal"
    class="max-w-6xl mx-auto px-6 h-16 flex items-center justify-between"
  >
    <a href="#hero" class="font-semibold text-lg text-(--text-primary)">
      sebas<span class="opacity-70 text-(--accent-green)">.devsec</span>
    </a>
    <!-- Botón menú (mobile) -->
    <button class="md:hidden" aria-label="Abrir menú"> ☰ </button>

    <Navigation />

    <a

      aria-label="Descargar CV en formato PDF"
      class="hidden md:flex gap-2 items-center border-b-2 border rounded-md px-3 py-1 text-sm"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="16"
        height="16"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
        aria-hidden="true"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
        ></path>
      </svg>
      <span>CV</span>
    </a>
  </nav>
</header>
