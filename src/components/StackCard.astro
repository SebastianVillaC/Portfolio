---
import Icon from "./Icon.astro";
const { data } = Astro.props.category;
---

<section
  class="border border-(--border-color) rounded-lg p-6 space-y-4
         hover:border-(--accent-cyan) transition-colors
         bg-(--bg-secondary)"
>
  <Icon name={data.icon} />

  <h3 class="text-lg font-bold text-(--accent-cyan)">
    {data.title}
  </h3>

  <ul class="space-y-2 text-sm text-(--text-secondary)">
    {data.skills.map((skill: string) => (
      <li class="flex items-center gap-2">
        <span class="w-1.5 h-1.5 rounded-full bg-(--accent-green)"></span>
        {skill}
      </li>
    ))}
  </ul>
</section>
